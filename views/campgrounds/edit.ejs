<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="mx-auto mt-5">
        <h1 class="text-center">
            Edit <%= campground.name %>
        </h1>
        
        <div class="text-center mt-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group" > 
            <input style="width: 100%;" type="text" name="camp[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
            <input style="width: 100%;" type="text" name="camp[image]" value="<%= campground.image %>">
            </div>
			<div class="form-group">
            <input style="width: 100%;" type="text" name="camp[descr]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
            <button class="btn btn-primary btn-block">Submit</button>
            </div>
            
        </form>
			</div>
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>